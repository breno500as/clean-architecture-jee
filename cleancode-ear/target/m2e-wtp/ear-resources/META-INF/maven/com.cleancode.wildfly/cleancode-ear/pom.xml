<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.cleancode.wildfly</groupId>
		<artifactId>cleancode-wildfly</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent> 
	<artifactId>cleancode-ear</artifactId>
	<packaging>ear</packaging>
	<build>
		<finalName>${project.parent.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${version.plugin.ear}</version>
				<configuration>
					<filtering>true</filtering>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<generateApplicationXml>true</generateApplicationXml>
					<modules>
						<webModule>
							<groupId>com.cleancode.wildfly</groupId>
							<artifactId>cleancode-web-api</artifactId>
							<contextRoot>/cleancode-web-api</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>com.cleancode.wildfly</groupId>
							<artifactId>cleancode-core</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.cleancode.wildfly</groupId>
							<artifactId>cleancode-persistence</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.cleancode.wildfly</groupId>
							<artifactId>cleancode-contracts</artifactId>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<dependencies>
		<dependency>
			<groupId>com.cleancode.wildfly</groupId>
			<artifactId>cleancode-persistence</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		
		<dependency>
			<groupId>com.cleancode.wildfly</groupId>
			<artifactId>cleancode-contracts</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		
		<dependency>
			<groupId>com.cleancode.wildfly</groupId>
			<artifactId>cleancode-core</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>com.cleancode.wildfly</groupId>
			<artifactId>cleancode-web-api</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>




</project>